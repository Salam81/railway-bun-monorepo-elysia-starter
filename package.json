{
	"name": "bun-monorepo-railway",
	"version": "1.0.0",
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@types/bun": "^1.3.5",
		"typescript": "^5.9.3"
	},
	"private": true,
	"scripts": {
		"dev": "NODE_ENV=development bun run --title='Bun Monorepo' --filter '*' dev",
		"dev:api": "NODE_ENV=development bun run --filter @bun-monorepo-railway/api dev",
		"dev:ui": "NODE_ENV=development bun run --filter @bun-monorepo-railway/ui dev",
		"----LINT----": "",
		"lint": "biome check",
		"lint:write": "biome check --write",
		"format": "biome format --write .",
		"----CLEAN----": "",
		"clean:modules": "bash -lc 'find . -type d -name node_modules -prune -print -exec rm -rf {} \\; && rm -f bun.lock'"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"catalog": {
			"elysia": "^1.4.19"
		}
	},
	"packageManager": "bun@1.3.5",
	"engines": {
		"bun": ">=1.3.5"
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,jsx,css,md,json}": [
			"bunx --bun biome check --write --unsafe"
		]
	}
}
